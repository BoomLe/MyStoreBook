@model List<Categorys>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Category</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
         <div class = "row pb-3">
        <div class="col-6 "> </h2></div>
        <div class="col-6 text-end">
            <a class="btn btn-dark" asp-controller="Categorys" asp-action="Create" > <i class="bi bi-plus-circle"></i> Create Categories</a>
        </div>
    </div>
<table  id="tblData" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>DisplayOrder</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      @foreach (var obj in Model.OrderByDescending(p => p.DisplayOrder))
      {
        <tr>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.DisplayOrder
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Categorys" asp-action="Edit" class="btn btn-dark mx-2" asp-route-id="@obj.Id"> <i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Categorys" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id=@obj.Id> <i class="bi bi-trash3-fill"></i> Delete</a>

                </div>
            </td>
        </tr>
        
      }
    </tbody>
</table>
    </div>
@section Scripts{
    <script src="~/js/product.js"></script>
}
